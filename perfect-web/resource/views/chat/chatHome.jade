.chatHome-container.col.w-md
  ul.nav.nav-tabs.nav-justified
    li.active
      a(href='#friends',data-toggle='tab')
        .tab-heading
          i.glyphicon.glyphicon-user
    li
      a(href='#comment',data-toggle='tab')
        .tab-heading
          i.glyphicon.glyphicon-comment
          span.badge.comment-badge(ng-bind='badge')
    li
      a(href='#transfer',data-toggle='tab')
        .tab-heading
          i.glyphicon.glyphicon-plus
  .tab-content
    #friends.tab-pane.active
      div.my-friends 我的好友
        ul(ng-repeat='friend in friendsList')
          li.friend(ng-click='chatWithMe(friend.friend[0])',title='点击和我聊天吧！')
            img(src='public/images/a0.jpg')
            span.my-friends-title(ng-bind='friend.friend[0].username')
            span.my-friends-discrip(ng-bind='friend.friend[0].discribe')
    #comment.tab-pane
      div.my-msg 消息记录
        ul(ng-repeat='msg in msgList')
          li.friend(ng-click='chatWithMe(msg.data.user[0])',title='点击和我聊天吧！')
            img(src='public/images/a0.jpg')
            span.my-friends-title(ng-bind='msg.data.user[0].username')
            span.my-friends-discrip(ng-bind='msg.lastMsg.content')
    #transfer.tab-pane
      p 动态中心
  include chatWindow